<% if (errors.length > 0 || success.length > 0) { %>
    <div class="row">
        <div class="col my-3">
            <% if (errors.length > 0) { %>
                <div class="alert alert-danger ">
                    <% errors.forEach(error => {%>
                        <%= error %><br>
                    <% }); %>
                </div>
            <% } else if (success.length > 0) { %>
                <div class="alert alert-success ">
                    <% success.forEach(error => {%>
                        <%= error %><br>
                    <% }); %>
                </div>
            <% } %>
        </div>
    </div>
<% } %>
