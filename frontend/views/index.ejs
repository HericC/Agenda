<%- include('includes/header'); -%>
<%- include('includes/navbar'); -%>

<main>
    <div class="row">
        <div class="col-lg-2"></div>

        <div class="col-lg-8 my-3">
            <h1 class="text-center">Agenda</h1>
            <p class="text-center lead">Seus contatos estão abaixo</p>

            <%- include('includes/messages'); -%>

            <% if (contacts.length > 0) { %>
                <div class="responsive-table">
                    <table class="table my-3">
                        <thead>
                            <tr>
                                <th>Nome</th>
                                <th>Sobrenome</th>
                                <th>E-mail</th>
                                <th>Telefone</th>
                                <th></th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            <% contacts.forEach(contact => { %>
                                <tr>
                                    <td><%= contact.firstName %></td>
                                    <td><%= contact.lastName %></td>
                                    <td><%= contact.email %></td>
                                    <td><%= contact.phone %></td>
                                    <% if (user.logged) { %>
                                        <td><a href="/contatos/editar/<%= contact._id %>">Editar</a></td>
                                        <td><a href="/contatos/delete/<%= contact._id %>" class="text-danger">Delete</a></td>
                                    <% } else { %>
                                         <td></td>
                                         <td></td>
                                    <% } %>
                                </tr>
                            <% }) %>
                        </tbody>
                    </table>
                </div>
            <% } else { %>
                <p class="text-center lead">Não existem contatos na sua agenda</p>
            <% } %>
        </div>

        <div class="col-lg-2"></div>
    </div>
</main>

<%- include('includes/footer'); -%>
