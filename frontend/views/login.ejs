<%- include('includes/header'); -%>
<%- include('includes/navbar'); -%>

<main>
    <div class="row">
        <div class="col-lg-2"></div>

        <div class="col-lg-8 my-3">
            <h1 class="text-center">Registro / Login</h1>
            <p class="text-center lead">Faça login ou crie sua conta a baixo</p>

            <div class="row">
                <div class="col-lg text-center">
                    <h4>Faça seu cadastro</h4>
                    <p>Se você ainda não possui uma conta, preencha o formulário abaixo:</p>

                    <form action="auth/register" method="POST">
                        <input type="hidden" name="_csrf" value="<%= csrfToken %>">

                        <div class="mb-3">
                          <label for="email-register" class="form-label">Seu E-mail</label>
                          <input type="email" class="form-control" id="email-register" name="email-register" placeholder="E-mail">
                        </div>

                        <div class="mb-3">
                          <label for="password-register" class="form-label">Sua Senha</label>
                          <input type="password" class="form-control" id="password-register" name="password-register" placeholder="Senha">
                        </div>

                        <button type="submit" class="btn btn-primary">Criar minha conta</button>
                    </form>
                </div>

                <div class="col-lg text-center">
                    <h4>Entrar no sistema</h4>
                    <p>Se você já possui uma conta, faça o login abaixo:</p>

                    <form action="auth/login" method="POST">
                        <input type="hidden" name="_csrf" value="<%= csrfToken %>">

                        <div class="mb-3">
                          <label for="email-login" class="form-label">Seu E-mail</label>
                          <input type="email" class="form-control" id="email-login" name="email-login" placeholder="E-mail">
                        </div>

                        <div class="mb-3">
                          <label for="password-login" class="form-label">Sua Senha</label>
                          <input type="password" class="form-control" id="password-login" name="password-login" placeholder="Senha">
                        </div>

                        <button type="submit" class="btn btn-primary">Entrar</button>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-lg-2"></div>
    </div>
</main>

<%- include('includes/footer'); -%>
